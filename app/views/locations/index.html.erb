<div class="panel panel-success">
  <div class="panel-heading">
    <span style="color:purple; font-size: 20pt">Locations manager</span>
    <%= link_to 'New location', new_location_path, class: 'btn btn-success pull-right' %>

  </div>

  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Region</th>
      <th>Country</th>
      <th>Postal code</th>
    </tr>

    <% @locations.each do |location| %>
        <tr>
          <td><%= location.name %></td>
          <td><%= location.street_address %></td>
          <td><%= location.city %></td>
          <td><%= location.state %></td>
          <td><%= location.region %></td>
          <td><%= location.country %></td>
          <td><%= location.postal_code %></td>
          <td><%=link_to 'Details', location_path(location), class: 'btn btn-info btn-xs' %></td>
          <td><%=link_to 'Edit', edit_location_path(location), class: 'btn btn-warning btn-xs' %></td>
          <td><%=link_to 'Delete', location_path(location), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
    <% end %>
  </table>
</div>
