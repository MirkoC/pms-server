<div class="panel panel-success">
  <div class="panel-heading">
    <span style="color:purple; font-size: 20pt">Campaigns manager</span>
    <%= link_to 'Start a new campaign', new_campaign_path, class: 'btn btn-success pull-right' %>

  </div>

  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
    </tr>

    <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= campaign.name %></td>
          <td><%= campaign.start_time %></td>
          <td><%= campaign.end_time %></td>
          <td><%=link_to 'Details', campaign_path(campaign), class: 'btn btn-info btn-xs' %></td>
          <td><%=link_to 'Edit', edit_campaign_path(campaign), class: 'btn btn-warning btn-xs' %></td>
          <td><%=link_to 'Delete', campaign_path(campaign), method: :delete, data: { confirm: 'Are you sure?' },
                         class: 'btn btn-danger btn-xs' %></td>
        </tr>
    <% end %>
  </table>
</div>
